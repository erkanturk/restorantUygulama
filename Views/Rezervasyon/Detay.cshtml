@{
    ViewData["Title"] = "Masa " + ViewBag.MasaNumarasi + " - Rezervasyon Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Masa @ViewBag.MasaNumarasi - Rezervasyon Detayları</h2>

<div class="mb-3">
    <a asp-controller="Rezervasyon" asp-action="Ekle" asp-route-masaId="@ViewBag.MasaId" class="btn btn-success">Yeni Rezervasyon Ekle</a>
    <a asp-controller="Garson" asp-action="Index" class="btn btn-secondary">Masalara Geri Dön</a>
</div>

@if (Model.Count == 0)
{
        <div class="alert alert-info">Bu masaya ait gelecekte bir rezervasyon bulunmamaktadır.</div>
}
else
{
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Müşteri Adı</th>
                    <th>Rezervasyon Tarihi</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var rezervasyon in Model)
            {
                        <tr>
                            <td>@rezervasyon.MusteriAdi</td>
                            <td>@rezervasyon.RezervasyonTarihi.ToString("dd.MM.yyyy")</td>
                            <td>@rezervasyon.OlusturulmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a asp-action="Duzenle" asp-route-id="@rezervasyon.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                <a asp-action="Sil" asp-route-id="@rezervasyon.Id" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
